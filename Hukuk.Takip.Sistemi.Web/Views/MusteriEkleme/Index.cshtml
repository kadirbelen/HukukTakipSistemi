@model Hukuk.Takip.Sistemi.Web.Models.Musteri.MusteriEklemeViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Musteri Ekleme</h2>

<link href="~/css/site.min.css" rel="stylesheet" />
<br />


<form method="post" asp-controller="MusteriEkleme" asp-action="Index">

    <div class="row-md-4 ">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">
                <label asp-for="MusteriNo" class="control-label">Müşteri Numarası</label>
                <input asp-for="MusteriNo" class="form-control" />
                <span asp-validation-for="MusteriNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label">Adı</label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soyad" class="control-label">Soyadı</label>
                <input asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row-md-4">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="TCKN" class="control-label">TC Kimlik Numarası</label>
                <input asp-for="TCKN" class="form-control" />
                <span asp-validation-for="TCKN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VKN" class="control-label">Vergi Kimlik Numarası</label>
                <input asp-for="VKN" class="form-control" />
                <span asp-validation-for="VKN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasaportNo" class="control-label">Pasaport Numarası</label>
                <input asp-for="PasaportNo" class="form-control" />
                <span asp-validation-for="PasaportNo" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row-md-4">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="BabaAdi" class="control-label">Baba Adı</label>
                <input asp-for="BabaAdi" class="form-control" />
                <span asp-validation-for="BabaAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnaAdi" class="control-label">Anne Adı</label>
                <input asp-for="AnaAdi" class="form-control" />
                <span asp-validation-for="AnaAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DogumYeri" class="control-label">Doğum Yeri</label>
                <input asp-for="DogumYeri" class="form-control" />
                <span asp-validation-for="DogumYeri" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row-md-4">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="DogumTarihi" class="control-label">Doğum Tarihi</label>
                <input asp-for="DogumTarihi" class="form-control" />
                <span asp-validation-for="DogumTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="CinsiyetID" class="control-label">Cinsiyet</label>
                    <select name="CinsiyetID" class="form-control" asp-items="@ViewBag.cinsiyetler"></select>
                    @*<select name="cinsiyet" class="form-control" asp-items="@Model.selectCinsiyetListItems"></select>*@
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MedeniHalID" class="control-label">Medeni Hali</label>
                <select name="MedeniHalID" class="form-control" asp-items="@ViewBag.medeniHaller"></select>
                @*<select name="medeniHali" class="form-control" asp-items="@Model.selectMedeniHalListItems"></select>*@
                <span asp-validation-for="MedeniHalID" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row-md-4">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="MusteriTipi" class="control-label">Müşteri Tipi</label>
                <select name="MusteriTipi" class="form-control" asp-items="@ViewBag.musteriTipler"></select>
                <span asp-validation-for="MusteriTipi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TakipSubeKodu" class="control-label">Takip Şube Kodu</label>
                <input asp-for="TakipSubeKodu" class="form-control" />
                <span asp-validation-for="TakipSubeKodu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TakipSubeAdi" class="control-label">Takip Şube Adı</label>
                <input asp-for="TakipSubeAdi" class="form-control" />
                <span asp-validation-for="TakipSubeAdi" class="text-danger"></span>
            </div>
        </div>
    </div>

    @*<div class="row-md-4">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="VefatTarihi" class="control-label">Vefat Tarihi</label>
                <input asp-for="VefatTarihi" class="form-control" />
                <span asp-validation-for="VefatTarihi" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <div class="checkbox">
                    <label>
                       
                        <input asp-for="HayattaMi" /> @Html.DisplayNameFor(model => model.HayattaMi)
                    </label>
                </div>
            </div>
        </div>
    </div>*@

    <div class="row-md-8">
        <div class="col-md-8">
            <div class="form-group">
                <input type="submit" value="KAYDET" class="btn btn-success btn-group-lg" formmethod="post" formaction="/MusteriEkleme/Create">
                <input type="button" class="btn btn-danger btn-group-lg" value="İPTAL" onclick="location.href='@Url.Action("Index", "MusteriIzleme")'" />
            
            </div>
        </div>
    </div>

</form>








@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
