@model Hukuk.Takip.Sistemi.Web.Models.IcraTakip.IcraTakipEklemeViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h4>İcra Takip Ekleme</h4>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AvukatId" class="control-label">Avukat</label>
                <select name="AvukatId" class="form-control" asp-items="@ViewBag.Avukatlar">
                    <option>Seçiniz</option>
                </select>
                <span asp-validation-for="AvukatId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="MusteriId" class="control-label">Müşteri</label>
                <select asp-for="MusteriId" name="MusteriId" class="form-control" id="musteriId" asp-items="@ViewBag.Musteriler">
                    <option>Seçiniz</option>
                </select>
                <span asp-validation-for="MusteriId" class="text-danger"></span>
            </div>


