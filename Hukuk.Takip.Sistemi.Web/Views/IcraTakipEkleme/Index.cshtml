            </div>
            <div class="form-group">
                <label asp-for="DosyaNo" class="control-label">Dosya No</label>
                <input asp-for="DosyaNo" class="form-control" />
                <span asp-validation-for="DosyaNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="KAYDET" class="btn btn-success btn-group-lg" formmethod="post" formaction="/IcraTakipEkleme/Create">
                <input type="button" class="btn btn-danger btn-group-lg" value="İPTAL" onclick="location.href='@Url.Action("Index", "IcraTakipIzleme")'" />
            </div>
        </form>
    </div>
</div>


