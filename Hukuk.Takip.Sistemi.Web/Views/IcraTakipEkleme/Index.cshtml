                </div>
            <div class="form-group">
                <label asp-for="TakipTipi" class="control-label"></label>
                <input asp-for="TakipTipi" class="form-control" />
                <span asp-validation-for="TakipTipi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IcraDairesi" class="control-label">İcra Dairesi</label>
                <input asp-for="IcraDairesi" class="form-control" />
